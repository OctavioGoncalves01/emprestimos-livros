@model IEnumerable<EmprestimosModel>

<div class="container">

    <div class="d-flex justify-content-between align-items-center mb-4">
        <h1>Histórico de Empréstimos</h1>
        <a class="btn btn-sucess mx-2" asp-controller="Emprestimo" asp-action="Cadastrar">Cadastrar novo empréstimo</a>
    </div>

    <table class="table table-dark table-hover">
        <thead>
            <tr>
            <th scope="col">Recebedor</th>
            <th scope="col">Fornecedor</th>
            <th scope="col">Livros</th>
            <th scope="col">Última Atualização</th>
            <th></th>
            </tr>
        </thead>
        <tbody>

            @if(Model != null){
                @foreach(var emprestimos in Model){
                    <tr>
                        <th scope="row">@emprestimos.Receber</th>
                        <td>@emprestimos.Fornecedor</td>
                        <td>@emprestimos.LivroEmprestado</td>
                        <td>@emprestimos.dataUltimaAtualiacao</td>
                        <td>
                            <a aps-controller="Emprestimo" asp-action="Editar" asp-route-id="@emprestimos.Id" class="btn btn-warning mx-2"> EDITAR </a>
                            <a aps-controller="Emprestimo" asp-action="Excluir" asp-route-id="@emprestimos.Id" class="btn btn-danger mx-2"> EXCLUIR </a>
                        </td>
                    </tr>
                }
            }

            
        </tbody>
    </table>

</div>