@using ProjetoExemplo.DTO
@model UsuarioLoginDTO

@{
    Layout = "_LayoutDeslogado";
}

@if(TempData["MensagemSucesso"] != null){
    <div class="alert alert-success text-light" role="alert">
        @TempData["MensagemSucesso"]
    </div>
}

@if(TempData["MensagemErro"] != null){
    <div class="alert alert-denger text-light" role="alert">
        @TempData["MensagemErro"]
    </div>
}

<div asp-asp-validation-summary="All" class="text-danger"></div>

<div class="conteiner">
    <form asp-action="Login" asp-controller="Login" method="post">
    <div class="mb-3">
        <label for="email" class="form-label">Email:.</label>
        <input type="email" class="form-control" id="email" asp-for="Email">
    </div>
    <div class="form-group">
        <label for="senha" class="form-label">SENHA:.</label>
        <input type="password" class="form-control" id="senha" asp-for="Senha">
    </div>
    <div class="d-flex justfy-contente-center">
    <button type="submit" class="btn btn-primary w-25 mx-2">Entrar</button>
    <a asp-action="Registrar" asp-controller="Login" class="btn w-25">Criar Cadastro</a>
    </div>

    </form>
</div>